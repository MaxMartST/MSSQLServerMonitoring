@page 
@model MSSQLServerMonitoring.WebApp.Pages.Alerts.AlertsModel
@{
    ViewData["Title"] = "List alerts";
}
<h2>@ViewData["Title"]</h2>


<form method="post">
    Start Date : <input class="form-control col-3"
                        type="datetime-local"
                        data-val="true"
                        asp-for="StartDate"
                        value="2021-01-23T06:42:55.806">
    End Date : <input class="form-control col-3"
                        type="datetime-local"
                        data-val="true"
                        asp-for="EndDate"
                        value="2021-01-23T06:42:55.806">

    <input type="submit" value="Submit" class="btn btn-success mt-3" />
    <a asp-page="./Alerts" class="btn btn-link mt-3">Get All alerts</a>
    <div class="text-center">
        <table class="table mt-3">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Alerts[0].Id)
                    </th>
                    <th>
                        <a asp-page-handler="GroupAlerts" asp-route-sortOrder="@Model.DateSort">
                            @Html.DisplayNameFor(model => model.Alerts[0].TimeStamp)
                        </a>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Alerts[0].QueryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Alerts[0].LogicalReads)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Alerts[0].Writes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Alerts[0].Duration)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Alerts[0].Message)
                    </th>
                    <th>
                        Details
                    </th>           
                </tr>
            </thead>
            <tbody>
           @foreach (var item in Model.Alerts)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeStamp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QueryId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LogicalReads)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Writes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Message)
                    </td>
                    <td>
                        <a asp-page="/Alerts/Details" asp-route-Id="@item.Id" class="btn m-1 btn-outline-info">View</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    
</form>





